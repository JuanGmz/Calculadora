<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
    >
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#FFF"
            android:textAlignment="textEnd"
            android:textStyle="bold"
            android:textSize="36sp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="15dp"
        />

        <LinearLayout style="@style/layoutHorizontal">
            <Button
                android:id="@+id/numero7"
                style="@style/botonGris"
                android:text="@string/numero7"/>

            <Button
                android:id="@+id/numero8"
                style="@style/botonGris"
                android:text="@string/numero8"/>

            <Button
                android:id="@+id/numero9"
                style="@style/botonGris"
                android:text="@string/numero9"/>

            <Button
                android:id="@+id/dividir"
                style="@style/botonAmarillo"
                android:onClick="dividir"
                android:text="@string/botonDividir" />
        </LinearLayout>

        <LinearLayout style="@style/layoutHorizontal">
            <Button
                android:id="@+id/numero4"
                style="@style/botonGris"
                android:text="@string/numero4"/>

            <Button
                android:id="@+id/numero5"
                style="@style/botonGris"
                android:text="@string/numero5"/>

            <Button
                android:id="@+id/numero6"
                style="@style/botonGris"
                android:text="@string/numero6"/>

            <Button
                android:id="@+id/restar"
                style="@style/botonAmarillo"
                android:text="@string/botonRestar"/>
        </LinearLayout>

        <LinearLayout style="@style/layoutHorizontal">
            <Button
                android:id="@+id/numero1"
                style="@style/botonGris"
                android:text="@string/numero1"/>

            <Button
                android:id="@+id/numero2"
                style="@style/botonGris"
                android:text="@string/numero2"/>

            <Button
                android:id="@+id/numero3"
                style="@style/botonGris"
                android:text="@string/numero3" />

            <Button
                android:id="@+id/sumar"
                style="@style/botonAmarillo"
                android:text="@string/botonSumar"/>
        </LinearLayout>

        <LinearLayout style="@style/layoutHorizontal">
            <Button
                android:id="@+id/numero0"
                style="@style/botonGris"
                android:text="@string/numero0"/>

            <Button
                android:id="@+id/borrar"
                style="@style/botonAmarillo"
                android:text="@string/botonBorrar"/>

            <Button
                android:id="@+id/igual"
                style="@style/botonAmarillo"
                android:text="@string/botonIgual" />

            <Button
                style="@style/botonAmarillo"
                android:text="@string/botonMultiplicar" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>